<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/wrapper_padding"
    tools:context=".view.fragments.PlanListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPlanList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <Space style="@style/SpaceMedium"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnBack"
            style="@style/ButtonField"
            android:text="@string/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <Space style="@style/SpaceMedium"/>
        <Button
            android:id="@+id/btnNewPlan"
            style="@style/ButtonBase"
            android:text="@string/new_plan"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>