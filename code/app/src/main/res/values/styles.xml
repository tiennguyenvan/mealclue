<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.YourAppName" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Other theme properties -->
        <item name="android:windowBackground">@color/colorBase</item> -->
    </style>


    <!-- fonts -->
    <style name="Text">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
    <style name="TextThin" parent="Text">
        <item name="fontFamily">@font/lexend_thin</item>
    </style>
    <style name="TextExtraLight" parent="Text">
        <item name="fontFamily">@font/lexend_extralight</item>
    </style>
    <style name="TextLight" parent="Text">
        <item name="fontFamily">@font/lexend_light</item>
    </style>
    <style name="TextRegular" parent="Text">
        <item name="fontFamily">@font/lexend_regular</item>
    </style>
    <style name="TextMedium" parent="Text">
        <item name="fontFamily">@font/lexend_medium</item>
    </style>
    <style name="TextSemiBold" parent="Text">
        <item name="fontFamily">@font/lexend_semibold</item>
    </style>
    <style name="TextBold" parent="Text">
        <item name="fontFamily">@font/lexend_bold</item>
    </style>
    <style name="TextExtraBold" parent="Text">
        <item name="fontFamily">@font/lexend_extrabold</item>
    </style>
    <style name="TextBlack" parent="Text">
        <item name="fontFamily">@font/lexend_black</item>
    </style>

    <!-- Buttons, default baseField -->
    <style name="Button">
        <item name="android:textColor">@color/colorContrast</item>
        <item name="android:drawableTint">@color/colorContrast</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">@dimen/button_padding</item>
        <item name="android:paddingBottom">@dimen/button_padding</item>

    </style>
    <style name="ButtonPrimary" parent="Button">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/colorBase</item>
        <item name="android:drawableTint">@color/colorBase</item>
    </style>
    <style name="ButtonBase" parent="Button">
        <item name="android:paddingTop">@dimen/button_padding_with_border</item>
        <item name="android:paddingBottom">@dimen/button_padding_with_border</item>
        <item name="android:background">@drawable/button_base</item>
    </style>
    <style name="ButtonField" parent="Button">
        <item name="android:background">@drawable/button_field</item>
    </style>
    <style name="ButtonSecondary" parent="Button">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/colorBase</item>
        <item name="android:drawableTint">@color/colorBase</item>
    </style>

    <style name="ButtonContrast" parent="Button">
        <item name="android:background">@drawable/button_contrast</item>
        <item name="android:textColor">@color/colorBase</item>
        <item name="android:drawableTint">@color/colorBase</item>
    </style>

    <style name="ButtonTertiary" parent="Button">
        <item name="android:background">@drawable/button_tertiary</item>
        <item name="android:textColor">@color/colorBase</item>
        <item name="android:drawableTint">@color/colorBase</item>
    </style>


</resources>