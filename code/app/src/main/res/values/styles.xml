    <style name="TextThin">
        <item name="fontFamily">@font/roboto_thin</item>
    </style>
    <style name="TextExtraLight">
        <item name="fontFamily">@font/roboto_extralight</item>
    </style>
    <style name="TextLight">
        <item name="fontFamily">@font/roboto_light</item>
    </style>
    <style name="TextRegular">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>
    <style name="TextMedium">
